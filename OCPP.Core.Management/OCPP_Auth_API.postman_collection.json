{
  "info": {
    "name": "OCPP.Core User Authentication API",
    "description": "JWT-based authentication API for OCPP.Core Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"eMailID\": \"john.doe@example.com\",\n  \"phoneNumber\": \"1234567890\",\n  \"countryCode\": \"+1\",\n  \"password\": \"Test123456\",\n  \"confirmPassword\": \"Test123456\",\n  \"addressLine1\": \"123 Main St\",\n  \"city\": \"New York\",\n  \"state\": \"NY\",\n  \"pinCode\": \"10001\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/user/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "user", "register"]
        }
      }
    },
    {
