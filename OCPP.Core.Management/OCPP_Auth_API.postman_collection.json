          "mode": "raw",
          "raw": "{\n  \"emailOrPhone\": \"john.doe@example.com\",\n  \"password\": \"Test123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/user/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "user", "login"]
        }
      }
